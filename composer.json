{
    "name": "silverstripe/silverstripe-forager",
    "description": "Search Content Management for Silverstripe CMS",
    "type": "silverstripe-vendormodule",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Bernie Hamlin",
            "email": "bernie@silverstripe.com"
        },
        {
            "name": "Chris Penny",
            "email": "chris.penny@silverstripe.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-dom": "*",
        "silverstripe/cms": "^6",
        "symbiote/silverstripe-queuedjobs": "^6"
    },
    "require-dev": {
        "silverstripe/recipe-testing": "^4",
        "slevomat/coding-standard": "~8.18.0"
    },
    "autoload": {
        "psr-4": {
            "SilverStripe\\Forager\\": "src/",
            "SilverStripe\\Forager\\Tests\\": "tests/"
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "silverstripe/recipe-plugin": true,
            "silverstripe/vendor-plugin": true
        }
    },
    "extra": {
        "project-files-installed": [
            "behat.yml",
            "phpunit.xml.dist"
        ]
    }
}
